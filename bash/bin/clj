#!/usr/bin/env bash

CLASS_PATH=/usr/local/Cellar/clojure/1.1.0/clojure.jar:/usr/local/Cellar/clojure-contrib/1.1.0/clojure-contrib.jar:/usr/local/jars/LBM_3.6.2_jdk1.5.0_12.jar
breakchars="(){}[],^%$#@\"\";:''|\\"

if [ $# -eq 0 ]; then 
  exec rlwrap --remember -c -b "$breakchars" \
  -f "$HOME"/.clj_completions \
  java -cp "$CLASS_PATH" clojure.main --repl
else
  exec java -cp "$CLASS_PATH" clojure.main $@
fi
