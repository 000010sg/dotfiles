#!/usr/bin/env bash

CLASS_PATH=/usr/local/jars/clojure.jar:/usr/local/jars/clojure-contrib.jar 
breakchars="(){}[],^%$#@\"\";:''|\\"

if [ $# -eq 0 ]; then 
  exec rlwrap --remember -c -b "$breakchars" \
  -f "$HOME"/.clj_completions \
  java -cp "$CLASS_PATH" clojure.main --repl
else
  exec java -cp "$CLASS_PATH" clojure.main $1 -- "$@"
fi
