rsync -avu --delete --exclude='@eaDir' -e "ssh -l root" ~/Documents/ root@$EPHALENT_IP:/volume1/homes/gaz/documents/
rsync -avu --delete --exclude='@eaDir' -e "ssh -l root" ~/Pictures/Photographs/ root@$EPHALENT_IP:/volume1/photo/gaz/
rsync -avu --delete --exclude='@eaDir' -e "ssh -l root" ~/Movies/home-movies/ root@$EPHALENT_IP:/volume1/video/home-movies/
rsync -avu --delete --exclude='@eaDir' -e "ssh -l root" ~/Library/Application\ Support/1Password/Backups/ root@$EPHALENT_IP:/volume1/homes/gaz/backups/1password/

